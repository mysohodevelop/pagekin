<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap 4 Website Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    {{!--
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script> --}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.5/axios.min.js"></script>
    <style>
        .fakeimg {
            height: 200px;
            background: #aaa;
        }
    </style>
    <style>

        .table tbody tr {cursor:pointer;}
    </style>
</head>

<body>

    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>My First Bootstrap 4 Page</h1>
        <p>Resize this responsive page to see the effect!</p>
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" style="margin-top:30px">
        <div class="row">
            <div class="col-sm-4">
                <form id="users_form" method="POST" action="javascript:;">
                    <input type="hidden" name="ids">
                    <div class="form-group">
                        <label for="firstName">firstName</label>
                        <input type="text" class="form-control" name="firstName" placeholder="firstName">
                    </div>
                    <div class="form-group">
                        <label for="lastName">lastName</label>
                        <input type="text" class="form-control" name="lastName" placeholder="lastName">
                    </div>
                    <button type="button" id="cancel_btn" class="btn btn-success" style="display:none;">Cancel</button>
                    <button type="button" id="save_btn" class="btn btn-primary">Save</button>
                    <button type="button" id="delete_btn" class="btn btn-danger" style="display:none;">Delete</button>
                </form>
            </div>
            <div class="col-sm-8" id="users_list">
            </div>
        </div>
    </div>

    <div class="jumbotron text-center" style="margin-bottom:0">
        <p>Footer</p>
    </div>

    <script>
        class UserList {
            draw(data) {
                data.reverse();
                let text = '<table class="table">';
                text += `<thead>`;
                text += `<tr>`;
                text += `<td>id</td>`;
                text += `<td>firstName</td>`;
                text += `<td>lastName</td>`;
                text += `</tr>`;
                text += `</thead>`;
                text += `<tbody>`;
                for (let i = 0; i < data.length; i++) {
                    text += `<tr data-user-id="${data[i].id}">`;
                    text += `<td class="ids">${data[i].id}</td>`;
                    text += `<td class="firstName">${data[i].firstName}</td>`;
                    text += `<td class="lastName">${data[i].lastName}</td>`;
                    text += `</tr>`;
                }
                text += `</tbody>`;
                text += `</table>`;
                $('#users_list').empty().append(text);
            }
            async get() {
                const res = await axios.get(`/users`);
                return res.data;
            }
            async getAndDraw() {
                const res = await this.get(`/users`);
                this.draw(res);
            }
            async save() {
                const ids = $("[name='ids']").val();
                if (ids !== '') {
                    await this.edit();
                    return;
                }
                await this.add();
            }
            async add() {
                const postData = $("#users_form").serialize();
                await axios.post('/users', postData);
                await this.getAndDraw();
                $("#users_form").find('input').val('');
            }
            async edit() {
                const ids = $("[name='ids']").val();
                const postData = $("#users_form").serialize();
                await axios.put(`/users/${ids}`, postData);
                await this.getAndDraw();
                $("#users_form").find('input').val('');
                $("#cancel_btn").hide();
                $("#delete_btn").hide();
            }
            async delete() {
                const ids = $("[name='ids']").val();
                await axios.delete(`/users/${ids}`);
                await this.getAndDraw();
                $("#users_form").find('input').val('');
                $("#cancel_btn").hide();
                $("#delete_btn").hide();
            }
        }

        (async () => {
            const userList = new UserList();
            await userList.getAndDraw();

            $(document).on('click', '#save_btn', () => {
                userList.save();
            });

            $(document).on('click', '.table tbody tr td', (e) => {
                $tr = $(e.target).parent('tr');
                let ids = $tr.find('.ids').text();
                let firstName = $tr.find('.firstName').text();
                let lastName = $tr.find('.lastName').text();

                $("[name='ids']").val(ids);
                $("[name='firstName']").val(firstName);
                $("[name='lastName']").val(lastName);
                $("#cancel_btn").show();
                $("#delete_btn").show();
            });

            $(document).on('click', '#cancel_btn', (e) => {
                $("#users_form").find('input').val('');
                $("#cancel_btn").hide();
                $("#delete_btn").hide();
            });

            $(document).on('click', '#delete_btn', (e) => {
                userList.delete();
            });


            // TODO cancel_btn
            // TODO delete
        })()
    </script>
</body>

</html>